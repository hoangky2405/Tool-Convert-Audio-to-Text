@{
    ViewData["Title"] = "Công cụ Tách Chữ AI";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        /* --- TỔNG THỂ --- */
        body, html {
            height: 100%;
            margin: 0;
            overflow: hidden;
            font-family: 'Segoe UI', system-ui, sans-serif;
            background-color: #f1f5f9;
        }

        /* --- SIDEBAR (THANH BÊN TRÁI) --- */
        .sidebar {
            background: #ffffff;
            border-right: 1px solid #e2e8f0;
            height: 100vh;
            padding: 24px;
            display: flex;
            flex-direction: column;
            box-shadow: 4px 0 24px rgba(0,0,0,0.02);
            z-index: 10;
        }

        .app-title {
            color: #0f172a;
            font-weight: 800;
            font-size: 1.4rem;
            margin-bottom: 30px;
            display: flex;
            align-items: center;
            gap: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

            .app-title i {
                color: #4f46e5;
                font-size: 1.8rem;
            }

        /* --- UPLOAD ZONE --- */
        .upload-zone {
            border: 2px dashed #cbd5e1;
            border-radius: 16px;
            padding: 40px 20px;
            text-align: center;
            cursor: pointer;
            background: #f8fafc;
            transition: all 0.2s ease;
            position: relative;
            overflow: hidden;
        }

            .upload-zone:hover {
                border-color: #4f46e5;
                background: #eef2ff;
                transform: translateY(-2px);
            }

            .upload-zone.active {
                border-color: #22c55e;
                background: #f0fdf4;
            }

        .file-name-badge {
            background: #e0e7ff;
            color: #4338ca;
            padding: 4px 12px;
            border-radius: 20px;
            font-size: 0.85rem;
            font-weight: 600;
            margin-top: 10px;
            display: inline-block;
            max-width: 100%;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        /* --- CONTROLS --- */
        .control-group {
            margin-bottom: 20px;
        }

        .control-label {
            font-size: 0.75rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #64748b;
            font-weight: 700;
            margin-bottom: 8px;
            display: block;
        }

        .form-select {
            border-radius: 10px;
            border: 1px solid #cbd5e1;
            padding: 10px 12px;
            font-weight: 500;
            color: #334155;
            cursor: pointer;
        }

            .form-select:focus {
                border-color: #4f46e5;
                box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
            }

        /* --- NÚT BẤM --- */
        .btn-start {
            background: linear-gradient(135deg, #4f46e5 0%, #4338ca 100%);
            border: none;
            border-radius: 12px;
            padding: 14px;
            font-weight: 600;
            font-size: 1rem;
            letter-spacing: 0.3px;
            box-shadow: 0 4px 12px rgba(79, 70, 229, 0.3);
            transition: 0.3s;
        }

            .btn-start:hover {
                transform: translateY(-2px);
                box-shadow: 0 6px 15px rgba(79, 70, 229, 0.4);
            }

            .btn-start:active {
                transform: translateY(0);
            }

            .btn-start:disabled {
                background: #94a3b8;
                transform: none;
                box-shadow: none;
                cursor: not-allowed;
            }

        /* --- ERROR ALERT --- */
        .error-box {
            background-color: #fef2f2;
            border: 1px solid #fee2e2;
            border-left: 5px solid #ef4444;
            color: #991b1b;
            padding: 15px;
            border-radius: 8px;
            font-size: 0.9rem;
            display: none;
            margin-top: 20px;
            animation: shake 0.5s cubic-bezier(.36,.07,.19,.97) both;
            box-shadow: 0 4px 6px rgba(239, 68, 68, 0.1);
        }

        .error-title {
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 8px;
            margin-bottom: 4px;
        }

        /* FIX LỖI CSS041: Dùng @@ để escape */
        @@keyframes shake {
            10%, 90% {
                transform: translate3d(-1px, 0, 0);
            }

            20%, 80% {
                transform: translate3d(2px, 0, 0);
            }

            30%, 50%, 70% {
                transform: translate3d(-4px, 0, 0);
            }

            40%, 60% {
                transform: translate3d(4px, 0, 0);
            }
        }

        /* --- MAIN CONTENT (BÊN PHẢI) --- */
        .main-content {
            padding: 24px;
            display: flex;
            flex-direction: column;
            height: 100vh;
        }

        .editor-container {
            background: white;
            border-radius: 16px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.04);
            flex-grow: 1;
            display: flex;
            flex-direction: column;
            overflow: hidden;
            border: 1px solid #e2e8f0;
        }

        .editor-toolbar {
            padding: 12px 20px;
            background: #f8fafc;
            border-bottom: 1px solid #e2e8f0;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .btn-action {
            background: white;
            border: 1px solid #cbd5e1;
            color: #475569;
            border-radius: 8px;
            padding: 6px 12px;
            font-size: 0.85rem;
            font-weight: 600;
            transition: 0.2s;
        }

            .btn-action:hover {
                background: #f1f5f9;
                color: #0f172a;
                border-color: #94a3b8;
            }

        /* Textarea */
        .editor-body {
            position: relative;
            flex-grow: 1;
        }

        textarea#txtResult {
            width: 100%;
            height: 100%;
            border: none;
            padding: 30px;
            resize: none;
            outline: none;
            font-size: 1.05rem;
            line-height: 1.8;
            color: #1e293b;
            font-family: 'Georgia', 'Times New Roman', serif;
        }

        textarea::placeholder {
            color: #cbd5e1;
            font-style: italic;
            font-family: 'Segoe UI', sans-serif;
        }

        /* Loading Overlay */
        .loading-overlay {
            position: absolute;
            inset: 0;
            background: rgba(255, 255, 255, 0.95);
            display: none;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            z-index: 50;
        }

        .spinner-custom {
            width: 50px;
            height: 50px;
            border: 4px solid #e2e8f0;
            border-top: 4px solid #4f46e5;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }

        @@keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>
</head>
<body>

    <div class="container-fluid p-0">
        <div class="row g-0">
            <div class="col-lg-3 col-md-4 sidebar">
                <div class="app-title">
                    <i class="bi bi-soundwave"></i> Trợ Lý Ghi Âm
                </div>

                <form id="uploadForm" class="d-flex flex-column flex-grow-1">

                    <div class="control-group">
                        <label class="control-label">1. File Nguồn</label>
                        <div class="upload-zone" id="dropZone">
                            <i class="bi bi-cloud-arrow-up fs-1 text-primary opacity-50"></i>
                            <div class="fw-bold mt-2 text-dark">Kéo thả hoặc Chọn file</div>

                            <div class="small text-muted">Hỗ trợ tất cả định dạng Audio & Video</div>

                            <input type="file" id="fileUpload" hidden accept="audio/*,video/*" />

                            <div id="fileBadge" class="d-none mt-2">
                                <span class="file-name-badge" id="fileNameText">filename.mp3</span>
                            </div>
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label">2. Gộp đoạn văn</label>
                        <select id="intervalSelect" class="form-select">
                            <option value="0">Từng câu (Chi tiết)</option>
                            <option value="1">Gộp mỗi 1 phút</option>
                            <option value="2">Gộp mỗi 2 phút</option>
                            <option value="5" selected>Gộp mỗi 5 phút</option>
                        </select>
                    </div>

                    <div class="control-group">
                        <label class="control-label">3. Ngôn ngữ nói</label>
                        <select id="langSelect" class="form-select">
                            <option value="en" selected>🇬🇧 Tiếng Anh (English)</option>
                            <option value="vi">🇻🇳 Tiếng Việt (Vietnamese)</option>
                        </select>
                    </div>

                    <button type="submit" id="btnSubmit" class="btn btn-primary btn-start w-100 mt-auto text-white">
                        <i class="bi bi-lightning-charge-fill me-1"></i> Bắt đầu Tách chữ
                    </button>
                </form>

                <div id="errorBox" class="error-box">
                    <div class="error-title">
                        <i class="bi bi-exclamation-triangle-fill"></i> Lỗi hệ thống
                    </div>
                    <div id="errorMessage" style="line-height: 1.4;">
                        Nội dung lỗi sẽ hiện ở đây...
                    </div>
                    <button type="button" class="btn btn-sm btn-link text-danger p-0 mt-2 text-decoration-none fw-bold" onclick="hideError()">
                        Đóng thông báo
                    </button>
                </div>
            </div>

            <div class="col-lg-9 col-md-8 main-content">
                <div class="editor-container">
                    <div class="editor-toolbar">
                        <div class="fw-bold text-secondary">
                            <i class="bi bi-file-text me-2"></i> KẾT QUẢ VĂN BẢN
                        </div>
                        <div class="d-flex gap-2">
                            <button class="btn btn-action" onclick="copyText()">
                                <i class="bi bi-clipboard"></i> Sao chép
                            </button>
                            <button class="btn btn-action" onclick="downloadText()">
                                <i class="bi bi-download"></i> Tải về (.txt)
                            </button>
                        </div>
                    </div>

                    <div class="editor-body">
                        <div id="loadingOverlay" class="loading-overlay">
                            <div class="spinner-custom mb-3"></div>
                            <h5 class="fw-bold text-dark">Đang xử lý...</h5>
                            <p class="text-muted small">Vui lòng đợi, tốc độ phụ thuộc vào CPU của bạn</p>
                        </div>

                        <textarea id="txtResult" placeholder="Nội dung sau khi tách sẽ hiển thị tại đây..."></textarea>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        const fileInput = document.getElementById('fileUpload');
        const dropZone = document.getElementById('dropZone');
        const fileBadge = document.getElementById('fileBadge');
        const fileNameText = document.getElementById('fileNameText');
        const txtResult = document.getElementById('txtResult');
        const errorBox = document.getElementById('errorBox');
        const errorMessage = document.getElementById('errorMessage');


        // --- 1. XỬ LÝ KÉO THẢ & CHỌN FILE ---
        dropZone.onclick = () => fileInput.click();
        fileInput.onchange = handleFileSelect;

        dropZone.ondragover = (e) => { e.preventDefault(); dropZone.classList.add('active'); };
        dropZone.ondragleave = () => { dropZone.classList.remove('active'); };
        dropZone.ondrop = (e) => {
            e.preventDefault();
            dropZone.classList.remove('active');
            if(e.dataTransfer.files[0]) {
                fileInput.files = e.dataTransfer.files;
                handleFileSelect();
            }
        };

        function handleFileSelect() {
            if (fileInput.files[0]) {
                fileNameText.innerText = fileInput.files[0].name;
                fileBadge.classList.remove('d-none');
                hideError();
            }
        }

        // --- 2. XỬ LÝ LỖI (UI) ---
        function showError(msg) {
            errorMessage.innerText = msg;
            errorBox.style.display = 'block';
            document.querySelector('.sidebar').scrollTop = document.querySelector('.sidebar').scrollHeight;
        }

        function hideError() {
            errorBox.style.display = 'none';
        }

        // --- 3. GỬI DỮ LIỆU ---
        document.getElementById('uploadForm').onsubmit = async (e) => {
            e.preventDefault();
            if(!fileInput.files[0]) {
                showError("Vui lòng chọn file Video hoặc Audio trước khi bắt đầu!");
                return;
            }

            const btn = document.getElementById('btnSubmit');
            const overlay = document.getElementById('loadingOverlay');
            const intervalVal = parseInt(document.getElementById('intervalSelect').value);
            const langVal = document.getElementById('langSelect').value;

            hideError();
            btn.disabled = true;
            overlay.style.display = 'flex';
            txtResult.value = "";

            const formData = new FormData();
            formData.append('fileUpload', fileInput.files[0]);
            formData.append('lang', langVal);

            try {
                const res = await fetch('/Home/ConvertAudioAjax', { method: 'POST', body: formData });
                const json = await res.json();

                if (json.success) {
                    txtResult.value = formatSegmentsByInterval(json.data, intervalVal);
                } else {
                    showError(json.message);
                    txtResult.value = "Có lỗi xảy ra. Xem chi tiết ở cột bên trái.";
                }
            } catch (err) {
                showError("Không thể kết nối đến Server! \nChi tiết: " + err.message);
            } finally {
                btn.disabled = false;
                overlay.style.display = 'none';
            }
        };

        // --- 4. FORMAT VĂN BẢN (GỘP PHÚT) ---
        function formatSegmentsByInterval(segments, intervalMinutes) {
            if (!segments || segments.length === 0) return "Không tìm thấy giọng nói nào trong file.";

            if (intervalMinutes === 0) {
                return segments.map(s => `[${s.timestamp}] ${s.text}`).join('\n\n');
            }

            let result = "";
            let currentBlockEnd = intervalMinutes * 60;
            let currentBlockText = "";
            let currentBlockStart = segments[0].timestamp;

            segments.forEach(seg => {
                let parts = seg.timestamp.split(':');
                let seconds = parseInt(parts[0]) * 60 + parseInt(parts[1]);

                if (seconds < currentBlockEnd) {
                    currentBlockText += seg.text + " ";
                } else {
                    if (currentBlockText.trim()) {
                        result += `[${currentBlockStart}] ${currentBlockText.trim()}\n\n`;
                    }
                    currentBlockStart = seg.timestamp;
                    currentBlockText = seg.text + " ";
                    while (seconds >= currentBlockEnd) {
                        currentBlockEnd += intervalMinutes * 60;
                    }
                }
            });

            if (currentBlockText.trim()) {
                result += `[${currentBlockStart}] ${currentBlockText.trim()}`;
            }

            return result;
        }

        // --- 5. TIỆN ÍCH ---
        function copyText() {
            const val = txtResult.value;
            if(!val) return;
            navigator.clipboard.writeText(val);
            const btn = document.querySelectorAll('.btn-action')[0];
            const originalHTML = btn.innerHTML;
            btn.innerHTML = '<i class="bi bi-check"></i> Đã chép';
            setTimeout(() => btn.innerHTML = originalHTML, 2000);
        }

        function downloadText() {
            const content = txtResult.value;
            if (!content) return alert("Chưa có nội dung để tải!");

            const blob = new Blob(["\uFEFF" + content], { type: "text/plain;charset=utf-8" });
            const link = document.createElement("a");
            link.href = URL.createObjectURL(blob);

            const now = new Date();
            const timeStr = now.toISOString().slice(0,19).replace(/[:T]/g,"-");
            link.download = `Transcript_${timeStr}.txt`;

            document.body.appendChild(link);
            link.click();
            document.body.removeChild(link);
        }
    </script>
</body>
</html>